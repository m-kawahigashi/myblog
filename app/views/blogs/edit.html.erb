  <div class="contents row">
    <%= form_tag("/blogs/#{@blog.id}/", method: :patch) do %>
      <h3>
        編集する
      </h3>
      <div class="card-panel hoverable">
      <input placeholder="Image Url" type="text" name="image" value="<%= @blog.image %>" autofocus="true">
      </div>
      <textarea class="card-panel hoverable" name="text" placeholder="text" ><%= @blog.text %></textarea>
      <input  type="submit" value="SENT">
    <% end %>
    <%= link_to "戻る", blogs_path %>
  </div>
